---
import { getCollection, render } from "astro:content";
import Layout from "@/layouts/content-layout.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const posts = await getCollection("anime");
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.md$/, "") },
    props: { post, cleanSlug: post.id.replace(/\.md$/, "") },
  }));
}

const { post, cleanSlug } = Astro.props;
const { Content } = await render(post);
---
<Layout
  title={post.data.title}
  description={`${post.data.title} - ${post.data.studio}`}
>
  <div class="overflow-hidden border-b border-gray-800 px-6 lg:px-0">
    <div class="mx-auto flex w-fit flex-col md:flex-row">
      <div class="relative mr-32 w-72 py-2 shadow-xl md:w-auto">
        <Image
          src={post.data.art}
          alt={cleanSlug}
          width="300"
          height="300"
          class="relative block rounded-md bg-white"
          style={`view-transition-name: transition-${cleanSlug};`}
        />
      </div>
      <div class="flex flex-col justify-center pt-8">
        <h1 class="text-5xl font-bold tracking-tight">
          {post.data.title}
        </h1>
        <p class="mt-2 text-lg">
          {post.data.genre[0]}
        </p>
        {
          post.data.releaseDate && (
            <p class="mt-2 text-lg">{post.data.releaseDate.toLocaleDateString()}</p>
          )
        }
        {
          post.data.startDate && post.data.endDate && (
            <p class="mt-2 text-lg">
              {post.data.startDate.toLocaleDateString()} - {post.data.endDate.toLocaleDateString()}
            </p>
          )
        }
      </div>
    </div>
  </div>
  <div
    class="md:prose-md prose mx-auto px-6 py-2 dark:prose-invert md:prose-lg xl:prose-xl lg:px-0"
  >
    <Content />
  </div>
</Layout>
