---
import { siteConfig } from '@/config/site'
import { cn } from '@/lib/utils'
import Logo from '@/components/icons/logo.astro'
const { pathname } = Astro.url
---

<div class="hidden md:flex">
  <a href="/" class="flex items-center space-x-2 md:mr-4" aria-label="Home Logo Header Link">
    <Logo fill="currentColor" class="h-6 w-6" />
  </a>
  <nav class="flex items-center space-x-6 text-sm font-medium">
    {
      siteConfig.navLinks.map((link) => {
        const isActive = link.href === '/' ? pathname === '/' : pathname?.startsWith(link.href)
        return (
          <a
            href={link.href}
            aria-label="{link.title} Header Link"
            class={cn(
              'relative transition-colors hover:text-foreground/80',
              isActive ? 'text-foreground' : 'text-foreground/60',
            )}
          >
            {link.title}
            {isActive && (
              <span
                class="pointer-events-none absolute left-0 -bottom-1 w-full h-0.5 bg-linear-to-r from-blue-500 to-cyan-400"
                aria-hidden="true"
              />
            )}
          </a>
        )
      })
    }
  </nav>
</div>
